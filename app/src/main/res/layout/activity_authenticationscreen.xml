<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    tools:context=".authenticationScreen"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    >

    <TextView
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="WELCOME"
        android:layout_margin="20dp"
        android:gravity="center"

        android:textSize="30sp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        />

    <EditText
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:hint="Enter Mobile"

        android:inputType="number"
        android:id="@+id/et1signup_mobileno"/>

    <Button
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Continue with mobile number"
        android:id="@+id/bt_signup1"
        android:onClick="bt1_signup"
        android:layout_marginStart="10dp"
        android:paddingTop="5dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"/>

    <EditText

        android:textColor="#1C1B1B"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="OTP"

        android:inputType="number"
        android:id="@+id/et2signup_otp"
        android:layout_margin="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="gone"
        />

    <Button

        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Verifiy"
        android:id="@+id/bt2_signup"
        android:onClick="bt2_signup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"/>

</LinearLayout>